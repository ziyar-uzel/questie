<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.LauncherController">
    <children>
        <AnchorPane prefHeight="300.0" prefWidth="400.0" stylesheets="@launcher.css">
            <children>
                <Button fx:id="create" layoutX="157.0" layoutY="137.0" mnemonicParsing="false" onAction="#createRoom" text="Create Room" />
                <Button fx:id="join" layoutX="157.0" layoutY="251.0" mnemonicParsing="false" onAction="#joinRoom" prefHeight="26.0" prefWidth="86.0" text="Join Room" />
            <TextField fx:id="username" layoutX="125.0" layoutY="182.0" />
            <TextField fx:id="code" layoutX="125.0" layoutY="216.0" />
            <Text fx:id="userText" layoutX="62.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
            <Text fx:id="roomText" layoutX="59.0" layoutY="233.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Room code" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="53.0" layoutY="-1.0" stroke="TRANSPARENT" strokeType="INSIDE" width="400.0" />
            <ImageView fx:id="imageName" fitHeight="41.0" fitWidth="76.0" layoutX="31.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@TU_Delft_logo_wit2.png" />
               </image></ImageView>
            <DatePicker fx:id="openDate" layoutX="123.0" layoutY="70.0" promptText="Sheduled date" />
            <TextField fx:id="openTime" layoutX="124.0" layoutY="102.0" promptText="Sheduled time hh:mm (04:20)" />
            </children>
        </AnchorPane>
    </children>
</VBox>
